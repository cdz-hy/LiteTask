<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:paddingBottom="16dp">

    <!-- 紧凑标题栏 -->
    <LinearLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_widget_progress"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="@string/widget_gantt_title"
            android:textColor="@color/on_surface"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- 进度徽章 -->
        <TextView
            android:id="@+id/progress_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:background="@drawable/widget_badge_background"
            android:textColor="@color/on_surface_variant"
            android:textSize="10sp"
            tools:text="2/5" />
    </LinearLayout>

    <!-- 甘特列表 -->
    <ListView
        android:id="@+id/gantt_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:paddingHorizontal="8dp"
        android:scrollbars="none"
        android:overScrollMode="never" />

    <!-- 空状态 -->
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/widget_no_tasks_today"
        android:textColor="@color/on_surface_variant"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>
