<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gantt_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/widget_item_background"
    android:paddingHorizontal="8dp"
    android:paddingVertical="6dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="3dp"
    android:gravity="center_vertical">

    <!-- 类型指示条 -->
    <ImageView
        android:id="@+id/type_indicator"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:src="@drawable/widget_type_indicator_work"
        android:scaleType="fitXY"
        android:contentDescription="@null" />

    <!-- 内容区 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- 第一行：标题 + 进度百分比 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/task_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/on_surface"
                android:textSize="11sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="UI 组件库搭建" />

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/on_surface_variant"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="45%" />
        </LinearLayout>

        <!-- 第二行：时间范围（完整日期时间） -->
        <TextView
            android:id="@+id/time_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/on_surface_variant"
            android:textSize="9sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="01/04 09:00 - 01/05 18:00" />

        <!-- 第三行：进度条 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="4dp">
            
            <!-- 正常进度条 -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/widget_gantt_progress_drawable"
                tools:progress="45" />
            
            <!-- 已完成灰色进度条 -->
            <ProgressBar
                android:id="@+id/progress_bar_done"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/widget_gantt_progress_done"
                android:visibility="gone" />
        </FrameLayout>

        <!-- 第四行：进度状态文字 -->
        <TextView
            android:id="@+id/progress_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/on_surface_variant"
            android:textSize="9sp"
            android:maxLines="1"
            tools:text="任务已开始 45%" />

    </LinearLayout>

</LinearLayout>
