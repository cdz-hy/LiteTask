<?xml version="1.0" encoding="utf-8"?>
<!-- 全屏遮罩层 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overlayContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 模糊背景层 (Android 12+使用RenderEffect, 低版本使用半透明遮罩) -->
    <View
        android:id="@+id/blurLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 半透明黑色遮罩 (在模糊层之上) -->
    <View
        android:id="@+id/dimLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <!-- 居中弹窗卡片 -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical"
        android:background="@drawable/floating_reminder_bg"
        android:elevation="24dp"
        android:clipToOutline="true">

        <!-- 顶部装饰条（带顶部圆角） -->
        <View
            android:id="@+id/accentBar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/accent_bar_bg" />

        <!-- 内容区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- 动画图标容器 -->
            <FrameLayout
                android:id="@+id/iconBox"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/icon_circle_bg">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_alarm" />
            </FrameLayout>

            <!-- 任务标题 -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F1F1F"
                tools:text="软件工程大作业" />

            <!-- 任务描述/类型 -->
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#757575"
                tools:text="工作任务 · 即将截止" />

            <!-- 时间徽章 -->
            <LinearLayout
                android:id="@+id/timeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/time_badge_bg"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/timeIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_clock"
                    android:tint="#757575" />

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0B57D0"
                    tools:text="15 分钟后截止" />
            </LinearLayout>

            <!-- 按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <!-- 我知道了 按钮 -->
                <TextView
                    android:id="@+id/dismissBtn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我知道了"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1F1F1F"
                    android:background="@drawable/btn_secondary_bg" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <!-- 立即完成 按钮 -->
                <TextView
                    android:id="@+id/actionBtn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="立即完成"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_primary_bg" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>